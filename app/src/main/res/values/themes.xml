<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FuckLegym" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="popupMenuStyle">@style/MaterialPopupMenuStyle</item>
        <item name="popupMenuBackground">@drawable/background_popup_menu</item>

    </style>

    <style name="Theme.FuckLegym.DarkTheme" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="windowActionBar">false</item>
