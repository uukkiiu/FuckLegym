<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="user"
            type="legym.fuck.logic.legym.network.model.login.LoginResult" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="@drawable/background_header_gradient"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/phone_statue_bar_height"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent"
            app:titleCentered="true" />


        <com.scwang.smart.refresh.layout.SmartRefreshLayout
            android:id="@+id/refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_behavior="ldh.widget.behavior.ObservableScrollingViewBehavior"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:srlEnablePreviewInEditMode="false">

            <com.scwang.smart.refresh.header.ClassicsHeader
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.core.widget.NestedScrollView
                android:id="@+id/contentViewContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:paddingBottom="100dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:animateLayoutChanges="true"
                    android:padding="20dp" >

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/image_header_card_background"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:src="@drawable/img_background_pay"
                        android:scaleType="centerCrop"
                        android:alpha="0.7"
                        app:layout_constraintStart_toStartOf="@id/container_card_header"
                        app:layout_constraintTop_toTopOf="@id/container_card_header"
                        app:layout_constraintEnd_toEndOf="@id/container_card_header"
                        app:layout_constraintBottom_toBottomOf="@id/container_card_header"
                        app:shapeAppearanceOverlay="@style/roundedCornerHeaderImageStylePayActivityCard"
                        />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/container_card_header"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/image_header"
                            setLegymHeader="@{user}"
                            android:layout_width="46dp"
                            android:layout_height="46dp"
                            android:padding="1dp"
                            android:scaleType="centerCrop"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:shapeAppearanceOverlay="@style/roundedCornerHeaderImageStyleMedium"
                            app:strokeColor="?attr/colorOnSurface"
                            app:strokeWidth="2dp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/text_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:text="@{user.realName}"
                            android:textSize="19sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@id/image_header"
                            app:layout_constraintTop_toTopOf="@id/image_header"
                            tools:text="小明" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:visibility="gone"
                            app:layout_constraintStart_toStartOf="@+id/text_user_name"
                            app:layout_constraintTop_toBottomOf="@id/text_user_name"
                            android:layout_marginTop="5dp"
                            android:layout_width="40dp"
                            android:layout_height="15dp"
                            android:alpha="0.7"
                            android:id="@+id/image_vip"
                            android:src="@mipmap/ic_no_vip" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:visibility="gone"
                            android:id="@+id/text_user_vip_type"
                            style="@style/TextAppearance.Material3.BodySmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:layout_marginTop="18dp"
                            android:alpha="0.7"
                            tools:text="@string/no_vip"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/image_header" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/text_user_account"
                            style="@style/TextAppearance.Material3.BodySmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="5dp"
                            android:alpha="0.7"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/text_user_vip_type"
                            tools:text="账号:13380802333" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <Space
                        app:layout_constraintTop_toBottomOf="@id/container_card_header"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/spacer1" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/image_my_integral_card_background"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:alpha="0.7"
                        android:src="?attr/colorPrimaryContainer"
                        app:layout_constraintStart_toStartOf="@id/container_my_integral"
                        app:layout_constraintTop_toTopOf="@id/container_my_integral"
                        app:layout_constraintEnd_toEndOf="@id/container_my_integral"
                        app:layout_constraintBottom_toBottomOf="@id/container_pay"
                        app:shapeAppearanceOverlay="@style/roundedCornerHeaderImageStylePayActivityCard" />


                    <LinearLayout
                        app:layout_constraintBottom_toTopOf="@id/container_pay"
                        app:layout_constraintTop_toBottomOf="@id/spacer1"
                        android:id="@+id/container_my_integral"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:alpha="0.75"
                            android:text="@string/my_integral"
                            android:textSize="15sp" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="17dp"
                            android:layout_marginStart="13dp"
                            android:alpha="0.4"
                            android:background="?attr/colorOnSurface" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:src="@drawable/ic_baseline_monetization_on_24" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/text_my_integral"
                            style="@style/TextAppearance.Material3.HeadlineSmall"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            tools:text="20.5" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/button_pay_panel"
                            style="@style/Widget.Material3.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:layout_marginEnd="7dp"
                            android:textColor="?attr/colorAccent"
                            app:iconGravity="end"
                            app:iconTint="?attr/colorAccent"
                            tools:icon="@drawable/ic_baseline_keyboard_arrow_up_24"
                            tools:text="@string/pack_up" />

                    </LinearLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        app:layout_constraintBottom_toTopOf="@id/spacer2"
                        app:layout_constraintTop_toBottomOf="@id/container_my_integral"
                        android:id="@+id/container_pay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:paddingBottom="10dp"
                        tools:visibility="visible">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_marginStart="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/current_price_title"
                            android:alpha="0.7"
                            android:id="@+id/text_every_day_price_title"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <LinearLayout
                            android:paddingStart="20dp"
                            android:paddingBottom="70dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:id="@+id/container_text_every_day_price"
                            app:layout_constraintTop_toBottomOf="@id/text_every_day_price_title"
                            app:layout_constraintStart_toStartOf="parent"
                            tools:ignore="RtlSymmetry">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:id="@+id/text_every_day_price"
                                android:layout_height="wrap_content"
                                tools:text="￥0.15"
                                android:textSize="20sp"
                                app:layout_constraintBottom_toBottomOf="@id/text_every_day_price"
                                />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:alpha="0.7"
                                android:text="@string/per_integral"
                                />

                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.7"
                            app:layout_constraintBottom_toBottomOf="@id/container_text_every_day_price"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="25dp"
                            android:layout_marginBottom="20dp"
                            android:text="@string/text_beg"
                            />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            tools:src="@drawable/img_begging"
                            android:id="@+id/image_begging"
                            android:layout_marginEnd="20dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_purchase_plan1"
                            style="@style/Widget.Material3.CardView.Outlined"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="true"
                            android:clickable="true"
                            android:focusable="true"
                            app:layout_constraintEnd_toStartOf="@id/card_purchase_plan2"
                            app:layout_constraintTop_toBottomOf="@id/container_text_every_day_price"
                            app:layout_constraintStart_toStartOf="parent"
                            >

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:padding="20dp"
                                android:layout_height="wrap_content"
                                tools:text="30积分" />

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_purchase_plan2"
                            style="@style/Widget.Material3.CardView.Outlined"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="true"
                            android:clickable="true"
                            android:focusable="true"
                            app:layout_constraintEnd_toStartOf="@id/card_purchase_plan3"
                            app:layout_constraintTop_toTopOf="@id/card_purchase_plan1"
                            app:layout_constraintStart_toEndOf="@id/card_purchase_plan1"
                            >

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:padding="20dp"
                                android:layout_height="wrap_content"
                                tools:text="80积分" />

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_purchase_plan3"
                            style="@style/Widget.Material3.CardView.Outlined"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="true"
                            android:clickable="true"
                            android:focusable="true"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/card_purchase_plan2"
                            app:layout_constraintStart_toEndOf="@id/card_purchase_plan2"
                            >

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:padding="20dp"
                                android:layout_height="wrap_content"
                                tools:text="200积分" />

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_purchase_plan_diy"
                            style="@style/Widget.Material3.CardView.Outlined"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="true"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_marginTop="20dp"
                            app:layout_constraintStart_toStartOf="@id/card_purchase_plan1"
                            app:layout_constraintEnd_toEndOf="@id/card_purchase_plan1"
                            app:layout_constraintTop_toBottomOf="@id/card_purchase_plan1"
                            >

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:padding="20dp"
                                android:layout_height="wrap_content"
                                android:text="@string/diy" />

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/image_pay_button_background"
                            android:layout_width="0dp"
                            android:layout_height="46dp"
                            android:padding="1dp"
                            android:src="@drawable/background_pay_button"
                            android:scaleType="centerCrop"
                            android:visibility="invisible"
                            tools:visibility="visible"
                            app:layout_constraintStart_toStartOf="@+id/button_make_order"
                            app:layout_constraintTop_toTopOf="@+id/button_make_order"
                            app:layout_constraintEnd_toEndOf="@+id/button_make_order"
                            app:layout_constraintBottom_toBottomOf="@+id/button_make_order"
                            app:shapeAppearanceOverlay="@style/roundedCornerHeaderImageStyleMedium"
                            />

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            app:layout_constraintTop_toTopOf="@id/card_purchase_plan_diy"
                            app:layout_constraintBottom_toBottomOf="@id/card_purchase_plan_diy"
                            app:layout_constraintStart_toEndOf="@id/card_purchase_plan_diy"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:textColor="#99755D"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            tools:visibility="visible"
                            android:visibility="invisible"
                            style="@style/Widget.Material3.Button.TextButton"
                            android:id="@+id/button_make_order"
                            tools:text="￥2.82 立即购买" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <Space
                        app:layout_constraintTop_toBottomOf="@id/container_pay"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/spacer2" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/image_invite_card_background"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:src="?attr/colorPrimaryContainer"
                        android:alpha="0.7"
                        app:layout_constraintStart_toStartOf="@id/container_card_invite"
                        app:layout_constraintTop_toTopOf="@id/container_card_invite"
                        app:layout_constraintEnd_toEndOf="@id/container_card_invite"
                        app:layout_constraintBottom_toBottomOf="@id/container_card_invite"
                        app:shapeAppearanceOverlay="@style/roundedCornerHeaderImageStylePayActivityCard" />


                    <androidx.constraintlayout.widget.ConstraintLayout
                        app:layout_constraintTop_toBottomOf="@id/spacer2"
                        android:id="@+id/container_card_invite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/text_new_user_title"
                            style="@style/TextAppearance.Material3.TitleMedium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:alpha="0.8"
                            android:gravity="center"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="@string/invite_new_user_get_integral"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/text_new_user_subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.7"
                            android:paddingTop="10dp"
                            android:text="@string/this_is_my_invite_code"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/text_new_user_title" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/text_my_invite_code"
                            style="@style/TextAppearance.Material3.HeadlineSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:textIsSelectable="true"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/text_new_user_subtitle"
                            tools:text="0ec4ccf48d" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/chip_copy_invite_code"
                            style="@style/Widget.Material3.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:text="@android:string/copy"
                            android:textColor="?attr/colorAccent"
                            app:icon="@drawable/ic_baseline_content_copy_24"
                            app:iconTint="?attr/colorAccent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/text_new_user_subtitle" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/text_invite_code_rules_title"
                            style="@style/TextAppearance.Material3.TitleMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="40dp"
                            android:alpha="0.75"
                            android:text="@string/rule"
                            android:textIsSelectable="true"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/text_my_invite_code" />

                        <View
                            android:id="@+id/spacer_invite_code"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_marginHorizontal="15dp"
                            android:alpha="0.3"
                            android:background="?attr/colorOnSurface"
                            app:layout_constraintBottom_toBottomOf="@id/text_invite_code_rules_title"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/text_invite_code_rules_title"
                            app:layout_constraintTop_toTopOf="@id/text_invite_code_rules_title" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/text_invite_code_rules"
                            style="@style/TextAppearance.Material3.BodyMedium"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:alpha="0.7"
                            android:gravity="start"
                            android:paddingBottom="10dp"
                            android:text="@string/invite_code_rules"
                            android:textIsSelectable="true"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/text_invite_code_rules_title" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/spacer3"
                        app:layout_constraintTop_toBottomOf="@id/container_card_invite" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/image_rules_card_background"
                        android:alpha="0.7"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:src="?attr/colorPrimaryContainer"
                        app:layout_constraintStart_toStartOf="@id/container_card_rules"
                        app:layout_constraintTop_toTopOf="@id/container_card_rules"
                        app:layout_constraintEnd_toEndOf="@id/container_card_rules"
                        app:layout_constraintBottom_toBottomOf="@id/container_card_rules"
                        app:shapeAppearanceOverlay="@style/roundedCornerHeaderImageStylePayActivityCard" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/container_card_rules"
                        app:layout_constraintTop_toBottomOf="@id/spacer3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/text_integral_rules_title"
                            style="@style/TextAppearance.Material3.TitleMedium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:alpha="0.8"
                            android:gravity="center"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="@string/integral_rules_title"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/text_integral_rules"
                            style="@style/TextAppearance.Material3.BodyMedium"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:alpha="0.7"
                            android:gravity="start"
                            android:paddingBottom="10dp"
                            android:text="@string/integral_rules"
                            android:textIsSelectable="true"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/text_integral_rules_title" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.core.widget.NestedScrollView>

            <com.scwang.smart.refresh.header.FalsifyFooter
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.scwang.smart.refresh.layout.SmartRefreshLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>